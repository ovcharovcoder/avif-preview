{
  "name": "avif-preview",
  "displayName": "AVIF Preview",
  "description": "Preview AVIF images in VS Code with gallery, zoom, pan, and metadata",
  "version": "1.0.3",
  "publisher": "ovcharovcoder",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "avif",
    "image",
    "preview",
    "viewer"
  ],
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ovcharovcoder/avif-preview.git"
  },
  "bugs": {
    "url": "https://github.com/ovcharovcoder/avif-preview/issues"
  },
  "homepage": "https://github.com/ovcharovcoder/avif-preview#readme",
  "activationEvents": [
    "onCommand:avifpreview.open"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "avifpreview.open",
        "title": "Open AVIF Preview"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "avifpreview.open",
          "when": "explorerResourceIsFolder || resourceFilename =~ /\\.avif$/i",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "avifpreview.open",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v",
        "when": "explorerResourceIsFolder || resourceFilename =~ /\\.avif$/i"
      }
    ]
  }
}

